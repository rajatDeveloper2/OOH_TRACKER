<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Add Note"
        app:layout_constraintStart_toStartOf="@+id/editTextTextNotes"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNotesSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save"
        app:layout_constraintStart_toStartOf="@+id/editTextTextNotes"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNotes" />

    <Button
        android:layout_margin="4dp"
        android:id="@+id/buttonNotesDel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="X"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextNotes"
        app:layout_constraintStart_toEndOf="@+id/editTextTextNotes"
        app:layout_constraintTop_toTopOf="@+id/editTextTextNotes" />

    <EditText
        android:id="@+id/editTextTextNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:maxLength="200"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:hint="Note" />

    <Button
        android:id="@+id/buttonNotesCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextNotes"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNotes" />
</androidx.constraintlayout.widget.ConstraintLayout>